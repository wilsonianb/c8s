{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "required": true
    },
    "kind": {
      "type": "string",
      "required": true
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      },
      "required": [ "name", "namespace" ],
      "additionalProperties": false
    },
    "spec": {
      "type": "object",
      "properties": {
        "automountServiceAccountToken": {
          "type": "boolean"
        },
        "containers": {
          "type": "array",
          "items": {
            "$ref": "./ContainerSpec.json"
          },
          "minItems": 1
        },
        "dnsPolicy": {
          "type": "string"
        },
        "runtimeClassName": {
          "type": "string"
        }
      },
      "required": [ "automountServiceAccountToken", "containers", "dnsPolicy", "runtimeClassName" ],
      "additionalProperties": false
    }
  },
  "required": [ "apiVersion", "kind", "metadata", "spec" ],
  "additionalProperties": false
}
